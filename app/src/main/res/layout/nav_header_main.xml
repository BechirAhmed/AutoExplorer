<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNavHeaderBackground"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/nav_view_logo"
        tools:ignore="ContentDescription" />

    <auto.explorer.base.ExplorerTextView
        android:id="@+id/sloganTextView"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="8dp"
        android:text="@string/app_slogan1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorNavHeaderEmail" />

    <auto.explorer.base.ExplorerTextView
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sloganTextView"
        android:text="@string/app_slogan2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorNavHeaderEmail" />

    <auto.explorer.base.ExplorerTextView
        android:id="@+id/versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sloganTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorNavHeaderEmail" />
</RelativeLayout>
